<div class="events-index">
  <div class="events-index__header">
    <h1 class="events-index__title">イベント投稿一覧</h1>

    <div class="events-index__actions">
      <%= link_to "イベント作成", new_event_path, class: "events-index__btn events-index__btn--primary" %>

      <%# 「イベント参加」用のURLがまだなら一旦 # にしてOK %>
      <%= link_to "イベント参加", "#", class: "events-index__btn events-index__btn--secondary" %>
    </div>
  </div>

  <div class="events-grid">
    <% if @events.present? %>
      <%= render @events %>
    <% else %>
      <div class="events-empty">イベントがありません</div>
    <% end %>
  </div>
</div>