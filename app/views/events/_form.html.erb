<%= form_with model: event, class: "event-form" do |f| %>
    <% if event.errors.any? %>
      <div class="event-form__errors">
        <ul>
          <% event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="event-form__field">
      <%= f.label :title, "タイトル", class: "event-form__label" %>
      <%= f.text_field :title, class: "event-form__input", placeholder: "例）忘年会" %>
    </div>
  
    <div class="event-form__field">
      <%= f.label :start_on, "開催日", class: "event-form__label" %>
      <%= f.date_field :start_at, class: "event-form__input" %>
    </div>
  
    <div class="event-form__field">
      <%= f.label :body, "内容", class: "event-form__label" %>
      <%= f.text_area :body, class: "event-form__textarea", rows: 6, placeholder: "場所・集合時間・服装の雰囲気など" %>
    </div>
  
    <div class="event-form__actions">
      <%= f.submit "作成", class: "event-form__submit" %>
    </div>
  <% end %>