<div class="auth-only">
  <h1 class="auth-only__title">ログイン</h1>

  <%= form_with url: main_app.login_path, scope: :session, class: "auth-only__form" do |f| %>
    <div class="auth-only__field">
      <%= f.label :email, "メールアドレス", class: "auth-only__label" %>
      <%= f.email_field :email, class: "auth-only__input" %>
    </div>

    <div class="auth-only__field">
      <%= f.label :password, "パスワード", class: "auth-only__label" %>
      <%= f.password_field :password, class: "auth-only__input" %>
    </div>

    <%= f.submit "ロ グ イ ン", class: "auth-only__submit" %>
  <% end %>

  <div class="auth-only__links">
    <%= link_to "新規登録はこちら", main_app.new_user_path %>
  </div>
</div>